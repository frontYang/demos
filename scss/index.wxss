@charset "UTF-8";
/* 图片 */
.icon {
  display: inline-block;
}

.icon-aa {
  width: 1px;
  height: 1px;
  background-image: url("../images/aa.png");
  background-repeat: no-repeat;
  background-size: 1px 1px;
}

.icon-bb {
  width: 2px;
  height: 2px;
  background-image: url("../images/bb.png");
  background-repeat: no-repeat;
  background-size: 2px 2px;
}

.icon-cc {
  width: 3px;
  height: 3px;
  background-image: url("../images/cc.png");
  background-repeat: no-repeat;
  background-size: 3px 3px;
}

/* 边框箭头 */
.icon-arr-bd {
  width: 20;
  height: 20;
  display: inline-block;
  border-left: 2 solid #333;
  border-top: 2 solid #333;
}

.icon-arr-bd.icon-arr-u {
  transform: rotateZ(45deg);
}

.icon-arr-bd.icon-arr-r {
  transform: rotateZ(135deg);
}

.icon-arr-bd.icon-arr-d {
  transform: rotateZ(-135deg);
}

.icon-arr-bd.icon-arr-l {
  transform: rotateZ(-45deg);
}

/* 实心箭头 */
.icon-arr-pd {
  width: 0;
  height: 0;
  display: inline-block;
  border-width: 20px 20px 20px 20px;
  border-style: solid;
  border-color: transparent;
}

.icon-arr-pd.icon-arr-u {
  border-bottom-color: #333;
}

.icon-arr-pd.icon-arr-r {
  border-left-color: #333;
}

.icon-arr-pd.icon-arr-d {
  border-top-color: #333;
}

.icon-arr-pd.icon-arr-l {
  border-right-color: #333;
}

/* 清除浮动 */
.clearfix:before, .clearfix:after {
  content: "";
  display: table;
}

.clearfix:after {
  clear: both;
}

/* 跨浏览器透明度 */
.opacity {
  opacity: 0.5;
  filter: alpha(opacity=50);
}

/* 文本省略号 */
.text-ellis-1 {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.text-ellis-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/*定义滚动条高宽及背景
  高宽分别对应横竖滚动条的尺寸*/
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
  background-color: #F5F5F5;
}

/*定义滚动条轨道
  内阴影+圆角*/
::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
  border-radius: 10px;
  background-color: #F5F5F5;
}

/*定义滑块
  内阴影+圆角*/
::-webkit-scrollbar-thumb {
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
  background-color: #bbb;
}
